@{
    var appname = ViewData["AppName"] as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>@ViewData["Title"] Simple auction</title>
    <link rel="shortcut icon" href="/favicon.ico">
    <link href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons' rel="stylesheet">

    <environment exclude="Development">
        <link rel="stylesheet" as="style" asp-href-include=@($"/css/{appname}.*.css") />
        <link rel="stylesheet" as="style" asp-href-include="@($"/css/chunk-vendors.*.css")" />        
    </environment>

</head>
<body>
    @RenderBody()

    <environment include="Development">
        <script type="text/javascript" asp-src-include=@($"/{appname}.js")></script>
    </environment>

    <environment exclude="Development">
        <script type=text/javascript asp-src-include=@($"/js/{appname}.*.js")></script>
        <script type=text/javascript asp-src-include=@($"/js/chunk-vendors.*.js")></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
